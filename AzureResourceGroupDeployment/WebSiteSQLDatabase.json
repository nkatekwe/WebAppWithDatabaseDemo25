{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.23.1",
      "templateHash": "1234567890"
    },
    "description": "Secure Web Application with SQL Database using modern Azure features"
  },
  "parameters": {
    "environment": {
      "type": "string",
      "defaultValue": "dev",
      "allowedValues": [
        "dev",
        "staging",
        "prod"
      ],
      "metadata": {
        "description": "Environment type for resource tagging and configuration"
      }
    },
    "projectName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 15,
      "metadata": {
        "description": "Project name used for resource naming prefixes"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region for all resources"
      }
    },
    "hostingPlanName": {
      "type": "string",
      "defaultValue": "[format('asp-{0}-{1}', parameters('projectName'), parameters('environment'))]",
      "minLength": 1,
      "metadata": {
        "description": "App Service Plan name"
      }
    },
    "skuName": {
      "type": "string",
      "defaultValue": "S1",
      "allowedValues": [
        "F1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1v2",
        "P2v2",
        "P3v2"
      ],
      "metadata": {
        "description": "App Service Plan pricing tier"
      }
    },
    "skuCapacity": {
      "type": "int",
      "defaultValue": 1,
      "minValue": 1,
      "maxValue": 20,
      "metadata": {
        "description": "App Service Plan instance count"
      }
    },
    "sqlAdministratorLogin": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "metadata": {
        "description": "SQL Server administrator username"
      }
    },
    "sqlAdministratorPassword": {
      "type": "securestring",
      "minLength": 8,
      "maxLength": 128,
      "metadata": {
        "description": "SQL Server administrator password"
      }
    },
    "enablePrivateEndpoints": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Enable private endpoints for secure connectivity"
      }
    },
    "allowedIpAddress": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Specific IP address to allow SQL Server access (leave empty for no public access)"
      }
    }
  },
  "variables": {
    "uniqueSuffix": "[take(uniqueString(resourceGroup().id), 8)]",
    "sqlServerName": "[format('sql-{0}-{1}-{2}', parameters('projectName'), parameters('environment'), variables('uniqueSuffix'))]",
    "databaseName": "[format('db-{0}-{1}', parameters('projectName'), parameters('environment'))]",
    "webAppName": "[format('app-{0}-{1}-{2}', parameters('projectName'), parameters('environment'), variables('uniqueSuffix'))]",
    "sqlDatabaseSku": {
      "dev": "Basic",
      "staging": "S1",
      "prod": "S3"
    },
    "sqlTier": {
      "dev": "Basic",
      "staging": "Standard",
      "prod": "Standard"
    },
    "tags": {
      "application": "[parameters('projectName')]",
      "environment": "[parameters('environment')]",
      "deployedBy": "[deployment().name]",
      "deploymentDate": "[utcNow()]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2022-05-01-preview",
      "name": "[variables('sqlServerName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "administratorLogin": "[parameters('sqlAdministratorLogin')]",
        "administratorLoginPassword": "[parameters('sqlAdministratorPassword')]",
        "version": "12.0",
        "minimalTlsVersion": "1.2",
        "publicNetworkAccess": "[if(empty(parameters('allowedIpAddress')), 'Disabled', 'Enabled')]",
        "restrictOutboundNetworkAccess": "Enabled"
      },
      "resources": [
        {
          "type": "databases",
          "apiVersion": "2022-05-01-preview",
          "name": "[variables('databaseName')]",
          "location": "[parameters('location')]",
          "sku": {
            "name": "[variables('sqlDatabaseSku')[parameters('environment')]]",
            "tier": "[variables('sqlTier')[parameters('environment')]]"
          },
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "1073741824",
            "zoneRedundant": "[if(equals(parameters('environment'), 'prod'), true, false)]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))]"
          ]
        },
        {
          "type": "firewallRules",
          "apiVersion": "2022-05-01-preview",
          "name": "AllowAzureServices",
          "properties": {
            "startIpAddress": "0.0.0.0",
            "endIpAddress": "0.0.0.0"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))]"
          ],
          "condition": "[not(empty(parameters('allowedIpAddress'))]"
        },
        {
          "type": "firewallRules",
          "apiVersion": "2022-05-01-preview",
          "name": "AllowSpecificIP",
          "properties": {
            "startIpAddress": "[parameters('allowedIpAddress')]",
            "endIpAddress": "[parameters('allowedIpAddress')]"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))]"
          ],
          "condition": "[not(empty(parameters('allowedIpAddress'))]"
        }
      ]
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[parameters('hostingPlanName')]",
      "location": "[parameters('location')]",
      "tags": "[variables('tags')]",
      "sku": {
        "name": "[parameters('skuName')]",
        "capacity": "[parameters('skuCapacity')]",
        "tier": "[if(contains(parameters('skuName'), 'F'), 'Free', if(contains(parameters('skuName'), 'B'), 'Basic', if(contains(parameters('skuName'), 'S'), 'Standard', 'Premium')))]"
      },
      "properties": {
        "perSiteScaling": false,
        "elasticScaleEnabled": false,
        "zoneRedundant": "[if(equals(parameters('environment'), 'prod'), true, false)]"
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "tags": "[union(variables('tags'), {
        'hidden-related': '[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]'
      })]",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "siteConfig": {
          "minTlsVersion": "1.2",
          "ftpsState": "FtpsOnly",
          "http20Enabled": true,
          "appSettings": [
            {
              "name": "APPLICATIONINSIGHTS_CONNECTION_STRING",
              "value": "[if(equals(parameters('environment'), 'prod'), reference(resourceId('Microsoft.Insights/components/', variables('webAppName'))).ConnectionString, '')]"
            }
          ],
          "connectionStrings": [
            {
              "name": "WebAppContext",
              "connectionString": "[format('Data Source={0};Initial Catalog={1};Authentication=Active Directory Managed Identity;', reference(resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))).fullyQualifiedDomainName, variables('databaseName'))]",
              "type": "SQLAzure"
            }
          ]
        },
        "httpsOnly": true,
        "clientAffinityEnabled": false
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', parameters('hostingPlanName'))]",
        "[resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))]"
      ],
      "resources": [
        {
          "type": "config",
          "apiVersion": "2022-09-01",
          "name": "appsettings",
          "properties": {
            "WEBSITE_RUN_FROM_PACKAGE": "1"
          },
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
          ]
        }
      ]
    },
    {
      "type": "Microsoft.Sql/servers/administrators",
      "apiVersion": "2022-05-01-preview",
      "name": "[format('{0}/ActiveDirectory', variables('sqlServerName'))]",
      "properties": {
        "administratorType": "ActiveDirectory",
        "login": "azure-ad-admin",
        "sid": "[reference(resourceId('Microsoft.Web/sites', variables('webAppName')), '2022-09-01', 'full').identity.principalId]",
        "tenantId": "[subscription().tenantId]"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))]",
        "[resourceId('Microsoft.Web/sites', variables('webAppName'))]"
      ]
    }
  ],
  "outputs": {
    "webAppName": {
      "type": "string",
      "value": "[variables('webAppName')]"
    },
    "webAppUrl": {
      "type": "string",
      "value": "[format('https://{0}.azurewebsites.net', variables('webAppName'))]"
    },
    "sqlServerFqdn": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))).fullyQualifiedDomainName]"
    },
    "databaseName": {
      "type": "string",
      "value": "[variables('databaseName')]"
    },
    "connectionString": {
      "type": "string",
      "value": "[format('Server={0};Database={1};Authentication=Active Directory Managed Identity;', reference(resourceId('Microsoft.Sql/servers/', variables('sqlServerName'))).fullyQualifiedDomainName, variables('databaseName'))]"
    }
  }
}
